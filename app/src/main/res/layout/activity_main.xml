<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e3f2fd"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

        <TextView
            android:id="@+id/Player1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00E2ACAC"
            android:backgroundTint="#00F8C3C3"
            android:freezesText="true"
            android:layout_toRightOf="@id/imageView"
            android:text="Player 1: 0"
            android:textStyle="italic"
            android:textColor="#111e6c"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/Player2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Player1Score"
            android:layout_toRightOf="@id/imageView2"
            android:layout_marginTop="0dp"
            android:freezesText="true"
            android:text="Player 2: 0"
            android:textStyle="italic"
            android:textColor="#111e6c"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/btn_reset"
            android:text="reset"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/asset_140" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/imageView"
            app:srcCompat="@drawable/ic_asset_110"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_reset"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="60sp"
            android:freezesText="true"
             />
        <Button
            android:id="@+id/button_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_reset"
            android:layout_weight="1"
            android:textSize="60sp"
            android:layout_margin="2dp"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_reset"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:textSize="60sp"
            android:freezesText="true"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_reset"
            android:layout_margin="2dp"
            android:textSize="60sp"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_reset"
            android:layout_margin="2dp"
            android:textSize="60sp"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_reset"
            android:layout_margin="3dp"
            android:textSize="60sp"
            android:freezesText="true"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_reset"
            android:layout_margin="2dp"
            android:textSize="60sp"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_reset"
            android:layout_margin="2dp"
            android:textSize="60sp"
            android:freezesText="true"/>
        <Button
            android:id="@+id/button_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_reset"
            android:layout_margin="2dp"
            android:textSize="60sp"
            android:freezesText="true"/>


    </LinearLayout>


</LinearLayout>